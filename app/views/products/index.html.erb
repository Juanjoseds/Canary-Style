<div class="mainadmin">
  <p class="titleCesta">Listado de productos</p>
  <%= form_tag searchadmin_path, :method => 'get', class: "search mb-3" do %>
    <%= text_field_tag :search, params[:search] %>
  <% end %>
  <table class="table table-hover table-bordered">
    <thead class="thead-light">
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Nombre</th>
      <th scope="col">Descripción</th>
      <th scope="col">Color</th>
      <th scope="col">Rgb</th>
      <th scope="col">Tallas</th>
      <th scope="col">Género</th>
      <th scope="col">Oferta</th>
      <th scope="col">Precio</th>
      <th scope="col"></th>
    </tr>
    </thead>
    <tbody>
    <% @products.each do |product| %>
    <tr style="cursor: pointer; height: 100px;"onclick='window.location.href="/product/<%= product.id %>"'>
      <th scope="row"><%= product.id %></th>
      <td><%= product.name %></td>
      <td><%= product.description %></td>
      <td><%= product.color %></td>
      <td><%= product.rgb %></td>
      <td><%= product.talla %></td>
      <td><%= product.genero %></td>
      <td><%= product.offer %></td>
      <td><%= product.price %></td>
      <td>
        <section class="borrarCart"><%= link_to "Editar", edit_product_path(product), class: "btn btn-warning btnadmin mb-1" %></section>
        <section class="borrarCart"><%= link_to "Eliminar", deleteproduct_path(product), method: :delete, data: {confirm: "¿Deseas eliminar " + product.name + "?" }, class: "btn btn-danger btnadmin" %></section>
      </td>
    </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%= link_to "Crear articulo", products_new_path %>