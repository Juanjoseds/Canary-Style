<div class="mt-4 ml-4">
  <%= form_for @product do |f| %>

    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>
    <div>
      <%= f.label :color %>
      <%= f.text_field :color %>
    </div>
    <div>
      <%= f.label :price %>
      <%= f.number_field :price, step: :any %>
    </div>
    <div>
      <%= f.submit %>
    </div>
  <% end %>
</div>